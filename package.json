{
  "name": "elementalite",
  "version": "0.1.0",
  "description": "A personal collection of Web Components.",
  "main": "js/umd/index.js",
  "module": "js/index.js",
  "scripts": {
    "build:cjs": "cross-env BABEL_ENV=cjs babel src -d lib --source-maps",
    "build:es": "babel src -d es --source-maps",
    "build:umd": "cross-env BABEL_ENV=umd babel src -d dist --source-maps",
    "build:js": "npm run clean:js && run-p build:cjs build:es build:umd",
    "build:css": "postcss src/**/*.css --base src -d css --map",
    "clean:js": "rm -rf lib es dist"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phillipluther/elementalite.git"
  },
  "keywords": [
    "web",
    "components",
    "ui",
    "design",
    "language"
  ],
  "author": "Phillip Luther <dev@phillipluther.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phillipluther/elementalite/issues"
  },
  "homepage": "https://github.com/phillipluther/elementalite#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-modules-umd": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "babel-preset-minify": "^0.5.0",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.8",
    "eslint": "^5.11.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.0",
    "precss": "^4.0.0",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
